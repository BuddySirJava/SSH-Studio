<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="HostEditor" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">16</property>
    <style>
      <class name="editor-pane"/>
      <class name="host-editor"/>
    </style>
    <child>
      <object class="GtkLabel">
        <property name="label" translatable="yes">Host Configuration</property>
        <property name="margin-top">16</property>
        <style>
          <class name="title"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkNotebook" id="notebook">
        <property name="vexpand">True</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">16</property>
            <property name="margin-start">16</property>
            <property name="margin-end">16</property>
            <property name="margin-top">16</property>
            <property name="margin-bottom">16</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Host Patterns:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="patterns_entry">
                <property name="placeholder-text" translatable="yes">host1 host2 host3</property>
                <property name="tooltip-text" translatable="yes">Space-separated host patterns</property>
                <style>
                  <class name="field-entry"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="patterns_error_label">
                <property name="xalign">0</property>
                <property name="visible">False</property>
                <style>
                  <class name="error-label"/>
                  <class name="status-error"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">HostName:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="hostname_entry">
                <property name="placeholder-text" translatable="yes">example.com</property>
                <style>
                  <class name="field-entry"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">User:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="user_entry">
                <property name="placeholder-text" translatable="yes">username</property>
                <style>
                  <class name="field-entry"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Port:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="port_entry">
                <property name="placeholder-text" translatable="yes">22</property>
                <style>
                  <class name="field-entry"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="port_error_label">
                <property name="xalign">0</property>
                <property name="visible">False</property>
                <style>
                  <class name="error-label"/>
                  <class name="status-error"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Identity File:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkEntry" id="identity_entry">
                    <property name="placeholder-text" translatable="yes">~/.ssh/id_rsa</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="identity_button">
                    <property name="icon-name">document-open-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Choose Identity File</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Forward Agent:</property>
                <property name="xalign">0</property>
                <property name="margin-top">12</property>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="forward_agent_switch">
                <property name="valign">center</property>
                <property name="halign">start</property>
                <property name="hexpand">False</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Basic</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">ProxyJump:</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="proxy_jump_entry">
                <property name="placeholder-text" translatable="yes">user@jump-host</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">ProxyCommand:</property>
                <property name="xalign">0</property>
                <property name="margin-top">12</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="proxy_cmd_entry">
                <property name="placeholder-text" translatable="yes">ssh -W %h:%p user@jump-host</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Local Forward:</property>
                <property name="xalign">0</property>
                <property name="margin-top">12</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="local_forward_entry">
                <property name="placeholder-text" translatable="yes">8080:localhost:80</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Remote Forward:</property>
                <property name="xalign">0</property>
                <property name="margin-top">12</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="remote_forward_entry">
                <property name="placeholder-text" translatable="yes">8080:localhost:80</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Networking</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Custom Options:</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkListBox" id="custom_options_list">
                <property name="selection-mode">none</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="add_custom_button">
                <property name="label" translatable="yes">Add Custom Option</property>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Advanced</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Raw Configuration:</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkTextView" id="raw_text_view">
                    <property name="monospace">True</property>
                    <property name="wrap-mode">none</property>
                    <property name="editable">True</property>
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child type="tab">
          <object class="GtkLabel">
            <property name="label" translatable="yes">Raw/Diff</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="actions_box">
        <property name="orientation">horizontal</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <style>
          <class name="linked"/>
        </style>
        <child>
          <object class="GtkButton" id="copy_ssh_button">
            <property name="label" translatable="yes">Copy SSH Command</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="test_connection_button">
            <property name="label" translatable="yes">Test Connection</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="revert_button">
            <property name="label" translatable="yes">Revert</property>
            <property name="sensitive">False</property>
            <style>
              <class name="destructive-action"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
