<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkAdjustment" id="editor_font_adjustment">
    <property name="lower">9</property>
    <property name="upper">24</property>
    <property name="step-increment">1</property>
    <property name="page-increment">2</property>
    <property name="value">12</property>
  </object>
  <template class="PreferencesDialog" parent="GtkDialog">
    <property name="title" translatable="yes">Preferences</property>
    <property name="modal">True</property>
    <property name="resizable">False</property>
    <property name="default-width">500</property>
    <property name="default-height">300</property>
    <child type="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">16</property>
        <property name="margin-start">16</property>
        <property name="margin-end">16</property>
        <property name="margin-top">16</property>
        <property name="margin-bottom">16</property>
        <child>
          <object class="GtkGrid">
            <property name="row-spacing">16</property>
            <property name="column-spacing">16</property>
            <property name="row-homogeneous">False</property>
            <property name="column-homogeneous">False</property>
            <style>
              <class name="preferences-grid"/>
            </style>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">SSH Config Path:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="config_path_entry">
                <property name="placeholder-text" translatable="yes">~/.ssh/config</property>
                <property name="hexpand">True</property>
                <style>
                  <class name="field-entry"/>
                </style>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="config_path_button">
                <property name="icon-name">document-open-symbolic</property>
                <property name="tooltip-text" translatable="yes">Choose Config File</property>
                <style>
                  <class name="flat"/>
                </style>
                <layout>
                  <property name="column">2</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Backup Directory:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="backup_dir_entry">
                <property name="placeholder-text" translatable="yes">~/.ssh</property>
                <property name="hexpand">True</property>
                <style>
                  <class name="field-entry"/>
                </style>
                <layout>
                  <property name="column">1</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="backup_dir_button">
                <property name="icon-name">folder-open-symbolic</property>
                <property name="tooltip-text" translatable="yes">Choose Backup Directory</property>
                <style>
                  <class name="flat"/>
                </style>
                <layout>
                  <property name="column">2</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Enable Auto-Backup:</property>
                <property name="xalign">0</property>
                <style>
                  <class name="field-label"/>
                </style>
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="auto_backup_switch">
                <property name="active">True</property>
                <property name="halign">start</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Editor Font Size:</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkSpinButton" id="editor_font_spin">
                <property name="adjustment">editor_font_adjustment</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">3</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Prefer Dark Theme:</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="dark_theme_switch">
                <property name="active">False</property>
                <property name="halign">start</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">4</property>
                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="cancel_button">
        <property name="label" translatable="yes">Cancel</property>
        <property name="response">cancel</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="save_button">
        <property name="label" translatable="yes">Save</property>
        <property name="response">ok</property>
      </object>
    </child>
  </template>
</interface>
