{
    "app-id": "com.sshconfigstudio.app",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "ssh-config-studio",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--filesystem=~/.ssh:rw",
        "--socket=ssh-auth"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "config-opts": [
                "--prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "tag": "v0.18.0"
                }
            ]
        },
        {
            "name": "ssh-config-studio",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "post-install": [
                "printf '#!/usr/bin/env bash\\nexec python3 -m ssh_config_studio.main \"$@\"\\n' > /app/bin/ssh-config-studio\n",
                "chmod +x /app/bin/ssh-config-studio"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/share/pkgconfig",
                "/share/gtk-doc",
                "/share/doc",
                "/share/devhelp"
            ]
        }
    ]
}